
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Detail</h2>
<fieldset>
    <div class="display-label">Mã loại: @Model.maloai</div>
    <div class="display-label">Tên loại: @Model.tensach</div>
    <div class="display-label"><img src="@Model.hinh" alt="hinh thumbnail" /></div>
    <div class="display-label">Tên loại: @Model.giaban</div>
    <div class="display-label">Tên loại: @Model.ngaycapnhat</div>
    <div class="display-label">Tên loại: @Model.soluongton</div>
</fieldset>
@using (Html.BeginForm())
{
    <p>
        @Html.ActionLink("Delete", "Delete", new { id = Model.maloai }) |
        @Html.ActionLink("Edit", "Edit", new { id = Model.maloai }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
}